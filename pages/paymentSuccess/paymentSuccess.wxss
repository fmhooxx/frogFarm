/* pages/paymentSuccess/paymentSuccess.wxss */
page {
  background-color: #fff;
}

.succ-box {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  text-align: center
}

.succ-box image {
  width: 90rpx;
  height: 90rpx;
}

.succ {
  font-size: 34rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 30rpx;
}

/* 底部按钮样式 */
.btn-box {
  padding: 0 30rpx;
  margin-top: 100rpx;
}

.btn {
  width: 320rpx;
  height: 80rpx;
  border: 2rpx solid #00A0AC;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 30rpx;
}

.btn-left {
  background: #00A0AC;
}

.btn-right {
  font-size: 30rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: #00A0AC;
  background: rgba(255, 255, 255, 1);
}