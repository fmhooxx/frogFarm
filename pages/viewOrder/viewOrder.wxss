/* 列表备注开始 */
.bei-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 710rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  line-height: 88rpx;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.bei-title>image {
  width: 13rpx;
  height: 23rpx;
  vertical-align: middle;
}

.con-info {
  width: 710rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 0 auto
}

.con-info {
  padding: 0 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.con-list {
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1rpx solid #F3F3F3;
}

.total {
  height: 88rpx;
  line-height: 88rpx;
  text-align: right;
  font-family: Microsoft YaHei;
  font-weight: bold;
}

.total>view {
  display: inline-block;
  font-size: 26rpx;
  color: #333;
}

.price {
  font-size: 36rpx;
  color: #FF4543;
}

.price>text {
  font-size: 26rpx;
}

/* 订单详情开始 */
.order-details {
  width: 710rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx 32rpx 24rpx 33rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #333;
}

.order-details>view {
  margin: 10rpx 0;
}

.order-details-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-details-one {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #279524;
}

