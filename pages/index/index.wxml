<!-- index.wxml -->
<view class="index">
  <!-- 轮播图开始 -->
  <view class="index-swiper">
    <swiper class="swiper" indicator-dots indicator-active-color="#008E98" indicator-color="#fff" autoplay circular>
      <block wx:for="{{swiperList}}" wx:key="item.id">
        <swiper-item>
          <image class="swiper-img" src="{{item.url}}" mode="scaleToFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 轮播图结束 -->
  <!-- 消息以及定位开始 -->
  <view class="news">
    <!-- 定位 -->
    <view class="location">
      <!-- 定位图片 -->
      <image class="location-img" src="../../images/location.png"></image>
      <!-- 地区内容 -->
      <view class="location-box">
        <view>合肥市</view>
      </view>
      <!-- 下拉小箭头 -->
      <image class="drop-down-img" src="../../images/down.png"></image>
    </view>
    <!-- 信息 -->
    <view class="location-info" bindtap="goIndexNews">
      <image src="../../images/info.png"></image>
    </view>
  </view>
  <!-- 消息以及定位结束 -->
  <!-- 套餐推荐 -->
  <view class="set-meal">
    <image class="meal-img" src="../../images/index-recommend.jpg"></image>
    <view class="meal-text">— 套 / 餐 / 推 / 荐 —</view>
  </view>
  <!-- 推荐详情 -->
  <view class="list">
    <!-- 单个的盒子 -->
    <view class="list-item" wx:for="{{shopList}}" wx:key="{{index}}" bindtap="goPackageDetails">
      <!-- 会员标签 -->
      <view class="member" wx:if="{{item.member}}">
        <!-- 标签图片 -->
        <image class="member-img" src="../../images/index-member.png"></image>
        <!-- 标签文字 -->
        <view class="member-text">{{item.member}}</view>
      </view>
      <!-- 商品图片 -->
      <image class="item-img" src="{{item.url}}"></image>
      <!-- 下面的盒子 -->
      <view class="item-box">
        <!-- 套餐类型 -->
        <view class="item-type">{{item.type}}</view>
        <!-- 数量 -->
        <view class="item-num">{{item.num}}</view>
        <!-- 结尾 -->
        <view class="item-footer">
          <!-- 价格 -->
          <view class="item-price">
            <!-- 新价格 -->
            <text class="new">￥{{item.price}}</text>
            <!-- 旧价格 -->
            <text class="used">{{item.used}}</text>
          </view>
          <!-- 购买 -->
          <view class="purchase">购买</view>
        </view>
      </view>
    </view>
  </view>
  <!-- 查看更多 -->
  <view class="view-more">
    <!-- 文字 -->
    <view>查看更多</view>
    <!-- 右箭头 -->
    <image src="../../images/arrow-right.png"></image>
  </view>
  <!-- 附近商家 -->
  <view class="set-meal">
    <image class="meal-img" src="../../images/index-recommend.jpg"></image>
    <view class="meal-text">— 附 / 近 / 商 / 家 —</view>
  </view>
  <!-- 附近商家详情 -->
  <view>
    <view class="shop-box">
      <!-- 左边 -->
      <view class="shop-left">
        <!-- 商家图片 -->
        <image src="../../images/index-shop-uname.png"></image>
      </view>
      <!-- 右边 -->
      <view class="shop-right">
        <!-- 店铺名称 -->
        <view class="shop-uname">体验店A</view>
        <!-- 店铺地址 -->
        <view class="shop-address">合肥市庐阳区长江中路与北含山路交叉口向…</view>
        <!-- 服务 -->
        <view class="shop-service">
          <text class="shop-service-one">足浴采耳</text>
          <text>精油按摩</text>
        </view>
        <!-- 满 -->
        <view class="full-reduction">
          <text class="full">满</text>
          <text class="full-content">满40减10，满70减20，满100减30，满…</text>
        </view>
        <!-- 折 -->
        <view class="full-reduction">
          <text class="full fracture">折</text>
          <text class="full-content">满500元享受9折</text>
        </view>
      </view>
    </view>
    <view class="scroll">
      <!-- 可以滑动的区域 -->
      <scroll-view scroll-x class='scoll-content'>
        <view class='content-box' wx:for="{{infoList}}" wx:key="index">
          <!-- 图片 -->
          <image src='{{item.url}}' mode="aspectFill"></image>
          <!-- 底部内容 -->
          <view class="box-footer">
            <!-- 服务 -->
            <view class="service">{{item.service}}</view>
            <!-- 时间 -->
            <view class="timer">{{item.timer}}</view>
            <view>
              <!-- 新价格 -->
